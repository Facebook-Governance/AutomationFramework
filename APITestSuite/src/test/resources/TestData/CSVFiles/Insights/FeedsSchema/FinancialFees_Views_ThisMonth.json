{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "insightName": {
      "type": "string"
    },
    "insightTitle": {
      "type": "string"
    },
    "insightType": {
      "type": "string"
    },
    "triggerType": {
      "type": "string"
    },
    "createdDate": {
      "type": "string"
    },
    "subscription": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "entityId": {
              "type": "string"
            },
            "entityType": {
              "type": "string"
            },
            "frequency": {
              "type": "string"
            },
            "duration": {
              "type": "string"
            }
          },
          "required": [
            "entityId",
            "entityType",
            "frequency",
            "duration"
          ]
        }
      ]
    },
    "basicView": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "link": {
              "type": "object",
              "properties": {
                "entityName": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "required": [
                "entityName",
                "url"
              ]
            },
            "basicTrend": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "categoryTrend": {
                      "type": "array",
                      "items": [
                        {
                          "type": "object",
                          "properties": {
                            "categoryId": {
                              "type": "integer"
                            },
                            "category": {
                              "type": "string"
                            },
                            "debitTotal": {
                              "type": "object",
                              "properties": {
                                "amount": {
                                  "type": "number"
                                },
                                "currency": {
                                  "type": "string"
                                }
                              },
                              "required": [
                                "amount",
                                "currency"
                              ]
                            },
                            "creditTotal": {
                              "type": "object",
                              "properties": {
                                "amount": {
                                  "type": "number"
                                },
                                "currency": {
                                  "type": "string"
                                }
                              },
                              "required": [
                                "amount",
                                "currency"
                              ]
                            },
                            "netTotal": {
                              "type": "object",
                              "properties": {
                                "amount": {
                                  "type": "number"
                                },
                                "currency": {
                                  "type": "string"
                                }
                              },
                              "required": [
                                "amount",
                                "currency"
                              ]
                            },
                            "averageNetTotal": {
                              "type": "object",
                              "properties": {
                                "amount": {
                                  "type": "number"
                                },
                                "currency": {
                                  "type": "string"
                                }
                              },
                              "required": [
                                "amount",
                                "currency"
                              ]
                            }
                          },
                          "required": [
                            "categoryId",
                            "category",
                            "debitTotal",
                            "creditTotal",
                            "netTotal",
                            "averageNetTotal"
                          ]
                        }
                      ]
                    }
                  },
                  "required": [
                    "categoryTrend"
                  ]
                }
              ]
            }
          },
          "required": [
            "id",
            "name",
            "link",
            "basicTrend"
          ]
        }
      ]
    }
  },
  "required": [
    "id",
    "insightName",
    "insightTitle",
    "insightType",
    "triggerType",
    "createdDate",
    "subscription",
    "basicView"
  ]
}